<section class="list-list">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <div class="page-header">
        <h1>
          Registers History
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Registers
        </div>
        <div class="panel-body">
          <table class="table table-striped table-responsive">
            <thead>
              <tr>
                <td>Buyer</td>
                <td>Description</td>
                <td>Unity Price</td>
                <td>Quantity</td>
                <td>Address</td>
                <td>Supplier</td>
              </tr>
            </thead>
            <tbody>
              <% if @registers.empty?  %>
              <tr><td colspan="6" class="text-center"><h4>You don't have any registers yet.</h4></td></tr>
              <% end  %>
              <%= render @registers %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="5" class="text-right">Total price:</td>
                <td>
                  R$<%= @total %>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
